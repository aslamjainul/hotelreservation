<%- include('../common/header') %>

</head>
<body ng-app="adminModule">

<div class="container" ng-controller="registration">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Add New Hotel</h3>
                    </div>
                    <div class="panel-body">

        <div class="alert alert-success" ng-show="successfulRegistration"> Registered successfully...Proceed login from Hotel Manager login</div>
        <div class="alert alert-danger" ng-show="failureRegistration">Hotel name already exists!</div>
    

                            <fieldset >
                            <div class="form-group">
					* Hotelname, Username, Password should be minimum of 4 characters
			</div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Hotel Name" id='hotel' name="hotel" ng-model='hotel' type="text"  value="" autofocus required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Hotel Manager Username" id='username' name="username" ng-model='username' type="text" value="" autofocus required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type='password' placeholder="Password" id='password' name="password" ng-model='password' value="" required>
                                </div>
                                
        <div class="form-group">
            <button type="submit" ng-click="registerUser()" class="btn btn-primary">Register</button>
            <button type="submit" class="btn btn-default">Clear</button>
         
            <a href="/hotelmanager/login" target='_blank' class="btn btn-link">Hotel Manager Login</a>
        </div>
                                
                            </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
    <!-- For Angular -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.js"></script>
	<script src="../resources/scripts/admin.js"></script>


    
    
    
