        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">My Bookings</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Booked Seats
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Hotel</th>
                                        <th>Seat</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="gradeX" ng-repeat="itemToAdd in itemsToAdd" ng-hide="!itemToAdd">
                                        <td>{{itemToAdd.user}}</td>
                                        <td>{{itemToAdd.hotel}}</td>
                                        <td>{{itemToAdd.seat}}</td>
                                        <td class="center"><center>X</center></td>
                                    </tr>
                                </tbody>
                            </table>

                            
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
